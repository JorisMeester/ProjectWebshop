<!-- Header -->
<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Welcome To Our webshop!</div>
            <div class="intro-heading text-uppercase">Product Overview</div>
        </div>
    </div>
</header>

<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
    <div class="container">
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    @*<img class="img-fluid" src="img/portfolio/01-thumbnail.jpg" alt="">*@
                    @Html.DisplayFor(modelItem => item.Image)
                </a>
                <div class="portfolio-caption">
                    <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                    <p class="text-muted">@Html.DisplayFor(modelItem => item.Price)</p>
                    <p>@Html.ActionLink("Details", "ProductPage", new { id = item.Id })</p>
                </div>
            </div>
        }
        </div>
    </div>
</section>

